#!/bin/sh

dir="$(pwd)"
bin="$0"
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")"
cd ..
home="$(pwd)"
cd "${dir}"

if [ ! -z "${LUMEN_HOST}" ]
then
    host="${LUMEN_HOST}"
elif node -v > /dev/null 2>&1
then
    host=node
elif luajit -v > /dev/null 2>&1
then
    host=luajit
elif lua -v > /dev/null 2>&1
then
    host=lua
else
    echo no host found
fi

case $host in
    node*)
        code="${home}/index.js"
        export NODE_PATH="$NODE_PATH:${home}:${dir}/lib";;
    py*)
        code="${home}/__main__.py"
        export PYTHONPATH="${PYTHONPATH}:${home}:${dir}:${dir}/..";;
    *)
        code="${home}/main.lua"
        export LUA_PATH="$LUA_PATH;${home}/?.lua;${dir}/lib/?.lua;;";;
esac

exec ${host} "${code}" "$@"
