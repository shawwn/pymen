#!/bin/sh

dir="$(pwd)"
bin="$0"
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")"
cd ..
home="$(pwd)"
cd "${dir}"

if [ ! -z "${LUMEN_HOST}" ]
then
    host="${LUMEN_HOST}"
else
    host=python3
fi

export PYTHONPATH="${PYTHONPATH}:${up}:${home}:${dir}:${dir}/.."

set -x
exec ${host} "${home}" "$@"
